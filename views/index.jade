extends layout

block content
  nav.one-page-header.navbar.navbar-default.navbar-fixed-top(role='navigation')
    .container
      .menu-container.page-scroll
        button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-ex1-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#intro')
          span T
          | he&nbsp;
          span B
          | ig&nbsp;
          span O
          | range&nbsp;
          span F
          | un&nbsp;
          span D
          | ay
      // Collect the nav links, forms, and other content for toggling
      .collapse.navbar-collapse.navbar-ex1-collapse
        .menu-container
          ul.nav.navbar-nav
            li.page-scroll.home
              a(href='#body') Home
            li.page-scroll
              a(href='#about') About
            li.page-scroll
              a(href='#attractions') Attractions
            li.page-scroll
              a(href='#raffle') Raffle
            li.page-scroll
              a(href='#donate') Donate
  // === End Header ===

  // Intro Section
  section#intro.intro-section
    .fullscreenbanner-container
      .fullscreenbanner
        img(src='img/sliders/revolution/fun-day-web.png', alt='slidebg1', data-bgfit='cover', data-bgposition='center center', data-bgrepeat='no-repeat')          
  // End Intro Section

  // About Section
  section#about.about-section.section-first
    .block-v1
      .container
        .row.content-boxes-v3
          .col-md-5.md-margin-bottom-30
            i.icon-custom.rounded-x.icon-bg-dark.fa.fa-book
            .content-boxes-in-v3
              h2.heading-sm Zoe&apos;s Story
              p.lead=contentful.story[0].text
          .col-md-7
            i.icon-custom.rounded-x.icon-bg-dark.fa.fa-map-marker
            .content-boxes-in-v3
              h2.heading-sm Where and when
              h3 Saturday 7th May 2016
              p Cove football club, Squirrel Lane, Farnborough GU14 8PF
              iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2494.6035216003825!2d-0.7676092836538652!3d51.30001993366482!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x48742b26388fa397%3A0x214de9350870db43!2sCove+Football+%26+Social+Club!5e0!3m2!1sen!2suk!4v1456168589682', width='100%', height='450', frameborder='0', style='border:0', allowfullscreen='')
  
  // Attractions Section
  section#attractions
    //- for post in contentful.attractions
    .container
      .title-v1
        h2 Attractions
        p
          | Come and join us for a&nbsp;
          strong fun packed day&nbsp;
          | including the following&nbsp;
          strong attractions&nbsp;
          br
          | and&nbsp;
          strong entertainment

      .container
        .grid
          each post in contentful.posts
            .grid-item
              .service-block.service-block-default
                //i.icon-custom.icon-lg.icon-bg-u.rounded-x.fa.fa.fa-lightbulb-o
                h2.heading-md= post.name
                != marked(post.longText)

  section#raffle
    .container
      .title-v1
        h2 Raffle
        p
          | Tickets will be sold all day &pound;1 a strip and the&nbsp;
          strong BIG DRAW
          |  will be held at Farnborough Town Football Club, where the disco will be held from 7:30pm
        p
          | Tickets also available in advance from Peter Matthews, text or call 07810 865650
      .container
        .grid
          each prize in contentful.prizes
            .grid-item
              .service-block.service-block-default
                h2.heading-md= prize.name

                if typeof(prize.longText) != 'undefined'
                  != marked(prize.longText)


  section#bigdraw
    .container
      .title-v1
        h2 AND MANY MORE FANTASTIC PRIZES TO BE WON
        h2 Special Raffle
      
        
        each prize in contentful.raffle
          
          h2.heading-md= prize.name

          if typeof(prize.longText) != 'undefined'
            p!= marked(prize.longText)
            !=prize.video


      .title-v1
        h2 Auction
      .container
        .grid
          each prize in contentful.auction
            .grid-item
              .service-block.service-block-default
                if typeof(prize.longText) != 'undefined'
                  != marked(prize.longText)

                h2.heading-md= prize.name

      .title-v1
        h2 Disco
        p
          | Best Party night ever with the return of the superstar DJ &quot;Ferris &quot; over 18 only &pound;10 a ticket includes
          | buffet
        p
          | All proceeds will be donated to The Ruth Myles Unit at St Georges Hospital Tooting who have been absolutely
          | amazing treating and looking after Zoe this is just one way of us all to say thank you

      .title-v1
        h2 Sponsors      
        div.sponsors
          each sponsor in contentful.sponsors  
            .sponsor-item          

              a(href=sponsor.website)
                img(src!= asset(sponsor.logo, {w: 160, h: 160, q: 50}))
                    
  section#auction
    .container
      

  section#donate.contacts-section
    .container.content-lg
      .title-v1
        h2 Make a donation
        p You may donate via our Justgiving.com page
      .title-v1
        h2 See you on the big day!
        p
          | We look forward to seeing you on the day, it will be great fun, so please bring your entire family along!
    .copyright-section
      p
        | 2016 &copy; All Rights Reserved. Lovingly crafted and sponsored by&nbsp;
        a(target='_blank', href='https://twitter.com/headforcode') HeadForCode
      ul.social-icons
        li
          a.social_facebook.rounded-x(href='https://www.facebook.com/events/978950555476830/permalink/1028003940571491/', data-original-title='Facebook')
      span.page-scroll
        a(href='#intro')
          i.fa.fa-angle-double-up.back-to-top

  // End Contact Section
